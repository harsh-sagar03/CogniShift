{
  "manifest_version": 3,
  "name": "CogniShift",
  "version": "1.0",
  "description": "Neuro-adaptive web content for focus, reading, and understanding.",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["prompts.js", "ai.js", "content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
